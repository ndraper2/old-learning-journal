{% extends "base.jinja2" %}
{% block body %}
{% if request.authenticated_userid %}
<form action="{{ request.route_url('edit', id=entry.id) }}" method="POST" id="editform">
  <div>
    <label for="title">Title</label><br>
    <input type="text" size="30" name="title" id="title" value="{{ entry.title }}"/>
  </div>
  <div>
    <label for="text">Text</label><br>
    <textarea name="text" id="text" rows="5" cols="80">{{ entry.text }}</textarea>
  </div>
  <div>
    <input class="btn" id="editbtn" type="submit" value="Share" name="Share"/>
  </div>
</form>
{% endif %}
{% endblock %}